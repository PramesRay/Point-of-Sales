{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/**/**/**/**/*",
    "src/**/**/**/**/**/*.vue",
    "src/types/.d.ts",
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}